<Page x:Class="StreamingAppCMS.Pages.StreamingAppDescriptionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:locale="clr-namespace:StreamingAppCMS.Pages"
      xmlns:local="clr-namespace:StreamingAppCMS.Helpers"
      mc:Ignorable="d" 
      d:DesignHeight="640" d:DesignWidth="1000"
      FontFamily="Inter"
      Title="StreamingAppDescriptionPage">

    <Page.Resources>
        <local:RelativePathToImageConverter x:Key="ImagePathConverter"/>
    </Page.Resources>

    <Grid Background="#FF1E1E1E" Margin="10">
        <Grid.Resources>
            <!-- Page Backward Button Style -->
            <Style TargetType="Button" x:Key="PageBackwardButton" BasedOn="{StaticResource {x:Type Button}}">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF1E1E1E"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- ScrollBar Style -->
            <Style TargetType="ScrollBar">
                <Setter Property="SnapsToDevicePixels" Value="True"/>
                <Setter Property="OverridesDefaultStyle" Value="True"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Width" Value="10"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ScrollBar">
                            <Grid Background="{TemplateBinding Background}">
                                <Track Name="PART_Track" IsDirectionReversed="true" Focusable="True">
                                    <Track.Thumb>
                                        <Thumb BorderBrush="Transparent" BorderThickness="0" Height="Auto">
                                            <Thumb.Style>
                                                <Style TargetType="Thumb">
                                                    <Setter Property="Background" Value="#333"/>
                                                    <Setter Property="Height" Value="40"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Thumb">
                                                                <Border Background="{TemplateBinding Background}" CornerRadius="2"/>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#444"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Thumb.Style>
                                        </Thumb>
                                    </Track.Thumb>
                                </Track>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>

        <!-- Main Content ScrollViewer -->
        <ScrollViewer VerticalScrollBarVisibility="Disabled" 
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="50,20,50,50">
            <StackPanel Orientation="Vertical" Margin="20">

                <!-- Header Section with App Name and Logo -->
                <Border Background="#FF2A2A2A" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- App Logo -->
                        <Border Grid.Column="0" 
                                Background="#FF1E1E1E" 
                                CornerRadius="8" 
                                Padding="10" 
                                Margin="0,0,20,0">
                            <Image x:Name="imgAppLogo"
                                   Width="80" Height="80"
                                   Stretch="UniformToFill"
                                   Source="{Binding ImagePath, Converter={StaticResource ImagePathConverter}}"/>
                        </Border>

                        <!-- App Name and Basic Info -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock x:Name="txtAppName"
                                       Text="{Binding Name}"
                                       FontSize="32"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,0,10"/>

                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock Text="Users: " 
                                           FontSize="15" 
                                           Foreground="#CCCCCC"
                                           FontWeight="SemiBold"/>
                                <TextBlock x:Name="txtNumOfUsers"
                                           Text="{Binding NumOfUsers, StringFormat={}{0:N0}}"
                                           FontSize="15"
                                           Foreground="White"
                                           FontWeight="Regular"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock Text="Date Added: " 
                                           FontSize="15" 
                                           Foreground="#CCCCCC"
                                           FontWeight="SemiBold"/>
                                <TextBlock x:Name="txtDateAdded"
                                           Text="{Binding DateAdded, StringFormat='{}{0:dd/MM/yyyy}'}"
                                           FontSize="15"
                                           Foreground="White"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Description Section -->
                <Border Background="#FF2A2A2A" CornerRadius="8" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Description" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   Margin="0,0,0,30"/>

                        <Border Background="#FF1E1E1E" 
                                CornerRadius="4" 
                                Padding="20">
                            <RichTextBox x:Name="richTextBoxDescription"
                                         IsReadOnly="True"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         Foreground="White"
                                         FontFamily="Segoe UI"
                                         FontSize="15"
                                         Cursor="Arrow"                                         
                                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                                         HorizontalScrollBarVisibility="Disabled"
                                         MinHeight="200"
                                         MaxHeight="200">
                                <FlowDocument LineHeight="20"
                                              Foreground="White"
                                              Background="Transparent" />
                            </RichTextBox>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Page Back Button -->
        <Button x:Name="btnPageBack"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="20"
                Width="32" Height="32"
                Style="{StaticResource PageBackwardButton}"
                ToolTip="Page Backward" 
                Click="btnPageBack_Click">
            <Image Source="/Assets/Images/leftArrow.png"/>
        </Button>
    </Grid>
</Page>