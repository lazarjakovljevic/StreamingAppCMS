<Page x:Class="StreamingAppCMS.Pages.VisitorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:StreamingAppCMS.Helpers"
      Width="1000" Height="640"
      FontFamily="Inter"
      Title="VisitorPage">

    <Page.Resources>
        <local:RelativePathToImageConverter x:Key="ImagePathConverter"/>
    </Page.Resources>

    <Grid Background="#FF1E1E1E" Margin="10">
        <Grid.Resources>
            <!-- Logout Button Style -->
            <Style TargetType="Button" x:Key="LogoutButtonStyle" BasedOn="{StaticResource {x:Type Button}}">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF1E1E1E"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>

        <!--Logout Button-->
        <Button x:Name="btnLogout"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="20,20,20,15"
                Width="32" Height="32"
                Style="{StaticResource LogoutButtonStyle}"
                Click="Logout_Click"
                ToolTip="Logout">
            <Image Source="/Assets/Images/power.ico"/>
        </Button>

        <!-- DataGrid :) -->
        <DataGrid x:Name="StreamingAppDataGrid"
                  Margin="75"
                  Height="Auto"
                  MinRowHeight="50"
                  VerticalAlignment="Top"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  Background="#FF2A2A2A"
                  Foreground="White"
                  GridLinesVisibility="All"
                  VerticalGridLinesBrush="#FF3A3A3A"
                  HorizontalGridLinesBrush="#FF3A3A3A"
                  RowBackground="#FF2A2A2A"
                  AlternatingRowBackground="#FF323232"
                  BorderBrush="#FF3A3A3A"
                  BorderThickness="2"
                  FontSize="14"
                  CanUserSortColumns="False"
                  CanUserResizeColumns="False"
                  CanUserReorderColumns="False"
                  CanUserResizeRows="False" 
                  SelectionMode="Single"
                  SelectionUnit="Cell" 
                  IsReadOnly="True">

            <DataGrid.Resources>
                <!-- Header style -->
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#FF1E1E1E"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Padding" Value="10,10"/>
                    <Setter Property="BorderBrush" Value="#FF3A3A3A"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                </Style>

                <!-- Cell style -->
                <Style TargetType="DataGridCell">
                    <Setter Property="BorderBrush" Value="#FF3A3A3A"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Padding" Value="10,5"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#FF404040"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>

                <!-- Row style -->
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="#FF2A2A2A"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FF3A3A3A"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#FF404040"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <!-- Number of Users column -->
                <DataGridTextColumn Header="Number of Users" 
                                    Width="*"                                   
                                    Binding="{Binding NumOfUsers, StringFormat={}{0:N0}}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Normal"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Name column as Hyperlink -->
                <DataGridTemplateColumn Header="Name" 
                                        Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock HorizontalAlignment="Center" 
                                       VerticalAlignment="Center">                                       
                                <Hyperlink TextDecorations="Underline"
                                           Click="NameHyperlink_Click"                                           
                                           Tag="{Binding}">
                                    <Hyperlink.Style>
                                    <Style TargetType="Hyperlink">
                                        <Setter Property="Foreground" Value="White"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Foreground" Value="#1E90FF"/>
                                                <Setter Property="Cursor" Value="Hand"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Hyperlink.Style>  
                                <TextBlock Text="{Binding Name}" />                                      
                                </Hyperlink>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!--  Logo column  -->
                <DataGridTemplateColumn Header="Logo"
                                        Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding ImagePath, Converter={StaticResource ImagePathConverter}}"
                                   Width="40" Height="40"
                                   Stretch="UniformToFill"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- DateTime column -->
                <DataGridTextColumn Header="Date Added" 
                                    Width="*"
                                    Binding="{Binding DateAdded, StringFormat='{}{0:dd/MM/yyyy}'}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Normal"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>