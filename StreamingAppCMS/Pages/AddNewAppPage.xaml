<Page x:Class="StreamingAppCMS.Pages.AddNewAppPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StreamingAppCMS.Pages"
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      xmlns:locals="clr-namespace:StreamingAppCMS.Helpers"
      mc:Ignorable="d" 
      d:DesignHeight="1200" d:DesignWidth="1000"
      Title="AddNewAppPage"
      FontFamily="Inter">
    
    <Page.Resources>

        <locals:RelativePathToImageConverter x:Key="ImagePathConverter"/>

        <!-- Page Backward Button Style -->
        <Style TargetType="Button" x:Key="PageBackwardButton" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF1E1E1E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Save Button Style -->
        <Style TargetType="Button" x:Key="SaveButtonStyle">
            <Setter Property="Background" Value="#FF0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF106EBE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF005A9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Cancel Button Style -->
        <Style TargetType="Button" x:Key="CancelButtonStyle">
            <Setter Property="Background" Value="#FF1E1E1E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FF404040"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF3A3A3A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF252525"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Browse for Image Button Style -->
        <Style TargetType="Button" x:Key="BrowseForImageButtonStyle">
            <Setter Property="Background" Value="#FF2A2A2A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FF404040"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF3A3A3A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF252525"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ScrollBar Style -->
        <Style TargetType="ScrollBar">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="10"/>
            <Setter Property="Margin" Value="0,20,5,35"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="{TemplateBinding Background}">
                            <Track Name="PART_Track" IsDirectionReversed="true" Focusable="True">
                                <Track.Thumb>
                                    <Thumb BorderBrush="Transparent" BorderThickness="0" Height="Auto">
                                        <Thumb.Style>
                                            <Style TargetType="Thumb">
                                                <Setter Property="Background" Value="#333"/>
                                                <Setter Property="Height" Value="40"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Thumb">
                                                            <Border Background="{TemplateBinding Background}" CornerRadius="2"/>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#444"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Thumb.Style>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style TargetType="TextBox" x:Key="TextBoxStyle">
            <Setter Property="Height" Value="40" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="10,8" />
            <Setter Property="Background" Value="#FF292929" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#FF474747" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Margin" Value="0,0,0,5" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"      
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Focusable="false"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden"/>
                        </Border>

                        <!-- Trigger for Focus -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#6B6B6B" />
                                <Setter Property="BorderThickness" Value="1" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Border Style -->
        <Style TargetType="Border" x:Key="BorderStyle">
            <Setter Property="Background" Value="#FF252525"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <!-- Header Style -->
        <Style TargetType="Border" x:Key="HeaderStyle">
            <Setter Property="Background" Value="#FF1E1E1E"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Bold Button Style -->
        <Style x:Key="BoldButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#FF3A3A3A"/>
                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#FF555555"/>
                            </Trigger>
                            <!-- Pressed effect -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#FF2A2A2A"/>
                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#FF666666"/>
                            </Trigger>
                            <!-- Checked state -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#FF2A2A2A"/>
                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#FF666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Italic Button Style -->
        <Style x:Key="ItalicButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#FF3A3A3A"/>
                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#FF555555"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#FF2A2A2A"/>
                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#FF666666"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#FF2A2A2A"/>
                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#FF666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Underline Button Style -->
        <Style x:Key="UnderlineButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#FF3A3A3A"/>
                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#FF555555"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#FF2A2A2A"/>
                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#FF666666"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#FF2A2A2A"/>
                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#FF666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Color Picker Button -->
        <Style x:Key="ColorPickerButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#FF3A3A3A"/>
                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#FF555555"/>
                            </Trigger>
                            <!-- Pressed effect -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#FF2A2A2A"/>
                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#FF666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ModernComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#FF2A2A2A"/>
            <Setter Property="BorderBrush" Value="#FF4A4A4A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="MinHeight" Value="20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="Border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="3">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="20"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Content Presenter -->
                                    <ContentPresenter x:Name="ContentSite"
                                                        Grid.Column="0"
                                                        IsHitTestVisible="False"
                                                        Content="{TemplateBinding SelectionBoxItem}"
                                                        ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                        ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                        Margin="{TemplateBinding Padding}"
                                                        VerticalAlignment="Center"
                                                        HorizontalAlignment="Left"/>

                                    <!-- TextBox ComboBox -->
                                    <TextBox x:Name="PART_EditableTextBox"
                                               Grid.Column="0"
                                               Style="{x:Null}"
                                               Template="{DynamicResource ComboBoxEditableTextBoxTemplate}"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               Margin="{TemplateBinding Padding}"
                                               Focusable="True"
                                               Background="Transparent"
                                               Foreground="{TemplateBinding Foreground}"
                                               Visibility="Hidden"
                                               IsReadOnly="{TemplateBinding IsReadOnly}"/>

                                    <!-- ToggleButton -->
                                    <ToggleButton x:Name="ToggleButton"
                                                    Grid.Column="0"
                                                    Grid.ColumnSpan="2"
                                                    Template="{DynamicResource ComboBoxToggleButtonTemplate}"
                                                    Focusable="False"
                                                    IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}"
                                                    ClickMode="Press"/>

                                    <!-- Dropdown Arrow Using Geometry -->
                                    <Path x:Name="Arrow"
                                          Grid.Column="1"
                                          Fill="White"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Data="M 0 0 L 4 4 L 8 0 Z"/>
                                </Grid>
                            </Border>

                            <!-- Popup -->
                            <Popup x:Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Grid x:Name="DropDown"
                                      SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder"
                                            Background="#FF2A2A2A"
                                            BorderBrush="#FF4A4A4A"
                                            BorderThickness="1"
                                            CornerRadius="3"
                                            Effect="{DynamicResource DropShadowEffect}">
                                        <ScrollViewer x:Name="DropDownScrollViewer">
                                            <Grid RenderOptions.ClearTypeHint="Enabled">
                                                <Canvas HorizontalAlignment="Left" Height="0" VerticalAlignment="Top" Width="0">
                                                    <Rectangle x:Name="OpaqueRect"
                                                                 Fill="{Binding Background, ElementName=DropDownBorder}"
                                                                 Height="{Binding ActualHeight, ElementName=DropDownBorder}"
                                                                 Width="{Binding ActualWidth, ElementName=DropDownBorder}"/>
                                                </Canvas>
                                                <ItemsPresenter x:Name="ItemsPresenter" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                            </Grid>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Hover Effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#FF6A6A6A"/>
                            </Trigger>
                            <!-- Focus Effect -->
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#FF5A5A5A"/>
                            </Trigger>
                            <!-- Dropdown Open -->
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="Arrow" Property="Data" Value="M 0 4 L 4 0 L 8 4 Z"/> 
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox ToggleButton Template -->
        <ControlTemplate x:Key="ComboBoxToggleButtonTemplate" TargetType="ToggleButton">
            <Border Background="Transparent" BorderThickness="0"/>
        </ControlTemplate>

        <!-- ComboBox Editable TextBox Template -->
        <ControlTemplate x:Key="ComboBoxEditableTextBoxTemplate" TargetType="TextBox">
            <Border Background="Transparent" BorderThickness="0">
                <ScrollViewer x:Name="PART_ContentHost"/>
            </Border>
        </ControlTemplate>

        <!-- ComboBoxItem Style -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="MinHeight" Value="28"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF4A4A4A"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF3A3A3A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Drop Shadow Effect -->
        <DropShadowEffect x:Key="DropShadowEffect" 
                  Color="Black" 
                  Direction="270" 
                  ShadowDepth="3" 
                  BlurRadius="5" 
                  Opacity="0.3"/>

        <!-- FontFamily ComboBox Style for Font Preview -->
        <Style x:Key="FontFamilyComboBox" TargetType="ComboBox" BasedOn="{StaticResource ModernComboBox}">
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding Source}" 
                                   FontFamily="{Binding}" 
                                   FontSize="14" 
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="#FF1E1E1E" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer x:Name="scrollViewer" Grid.Row="0">
            <StackPanel Orientation="Vertical" Margin="10" MaxWidth="800">

                <!-- Header -->
                <Border Style="{StaticResource HeaderStyle}">
                    <TextBlock Text="Add a New Streaming App" 
                       FontSize="25" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center"/>
                </Border>

                <!-- Main Grid -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Row 1: Basic Information Section -->
                    <Border Grid.Row="0" Style="{StaticResource BorderStyle}">
                        <StackPanel>
                            <TextBlock Text="Basic Information" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               Margin="0,0,0,15"/>

                            <!-- App Name -->
                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Application Name *" 
                                           FontSize="14" 
                                           FontWeight="SemiBold" 
                                           Foreground="#CCCCCC" 
                                           Margin="0,0,0,10"/>
                                <TextBox x:Name="txtAppName" 
                                         Style="{StaticResource TextBoxStyle}"
                                         ToolTip="Enter the name of the streaming app"
                                         Text="{Binding Name}"/>
                                <TextBlock x:Name="txtAppNameError" 
                                           Foreground="Red"
                                           Text=""
                                           FontSize="12" 
                                           Margin="10,0,0,0" 
                                           Visibility="Visible"/>
                            </StackPanel>

                            <!-- Number of Users -->
                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Number of Users *" 
                                           FontSize="14" 
                                           FontWeight="SemiBold" 
                                           Foreground="#CCCCCC" 
                                           Margin="0,0,0,10"/>
                                <TextBox x:Name="txtNumOfUsers" 
                                         Style="{StaticResource TextBoxStyle}"
                                         ToolTip="Enter the number of users (numeric value)"
                                         Text="{Binding NumOfUsers}"/>
                                <TextBlock x:Name="txtNumOfUsersError" 
                                           Foreground="Red"
                                           Text=""
                                           FontSize="12" 
                                           Margin="10,0,0,0" 
                                           Visibility="Visible"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Row 2: App Logo Section-->
                    <Grid Grid.Row="1" MinHeight="225" MaxHeight="225">
                        <Border Style="{StaticResource BorderStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4*"/>
                                    <ColumnDefinition Width="7*"/>
                                    <ColumnDefinition Width="4*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Center">
                                    <TextBlock Text="Application logo" 
                                               FontSize="20" 
                                               FontWeight="Bold" 
                                               Foreground="White" 
                                               Margin="0,0,0,15"/>
                                    <Border BorderBrush="#FF1E1E1E" 
                                            Background="#FF1E1E1E"
                                            BorderThickness="1" 
                                            CornerRadius="10"
                                            Width="140"
                                            Height="140"
                                            Padding="10">
                                        <Grid Background="#FF1E1E1E">
                                            <Image x:Name="imgPreview" 
                                                   Stretch="Uniform"
                                                   Visibility="Visible"
                                                   Source="{Binding ImagePath, Converter={StaticResource ImagePathConverter}}"/>

                                            <TextBlock x:Name="txtNoImage" 
                                                       Text="No Image" 
                                                       Foreground="#666666" 
                                                       HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center"
                                                       FontSize="12"/>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <StackPanel Grid.Column="1" 
                                            Grid.ColumnSpan="2" 
                                            Margin="0,15,0,0" 
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Bottom">

                                    <Button x:Name="btnSelectImage" 
                                        Content="Browse for Image..." 
                                        Style="{StaticResource BrowseForImageButtonStyle}"
                                        HorizontalAlignment="Left"
                                        Width="160"
                                        Height="40"
                                        Click="btnSelectImage_Click"
                                        ToolTip="Click to select an image file"/>

                                    <TextBlock Text="Supported formats: .jpg, .png, .bmp"
                                               Foreground="#888"
                                               FontSize="12"
                                               Margin="0,10,0,0"/>

                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Row 3: Description Section -->
                    <Border Grid.Row="2" Style="{StaticResource BorderStyle}">
                        <StackPanel>
                            <TextBlock Text="Application Description" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               Margin="0,0,0,20"/>

                            <!-- Text Editor Toolbar -->
                            <Border Background="#FF1E1E1E" CornerRadius="4,4,0,0" Padding="15,10,10,10" >
                                <StackPanel Orientation="Horizontal">
                                    <!-- Font Selection  -->
                                    <ComboBox x:Name="cmbFontFamily" 
                                              Style="{StaticResource FontFamilyComboBox}"
                                              Width="150" 
                                              Margin="0,0,10,0"
                                              ToolTip="Select font family"
                                              SelectionChanged="cmbFontFamily_SelectionChanged"/>

                                    <!-- Font Size -->
                                    <ComboBox x:Name="cmbFontSize" 
                                              Style="{StaticResource ModernComboBox}"
                                              Width="60" 
                                              Margin="0,0,10,0"
                                              ToolTip="Select font size"
                                              SelectionChanged="cmbFontSize_SelectionChanged"/>

                                    <!-- Separator -->
                                    <Rectangle Fill="#FF404040" Width="1" Height="30" Margin="5,0"/>

                                    <!-- Bold -->
                                    <ToggleButton x:Name="btnBold" 
                                                    Style="{StaticResource BoldButtonStyle}"
                                                    Width="35" Height="35" 
                                                    Margin="5,0,2,0"
                                                    Click="btnBold_Click"
                                                    ToolTip="Bold">
                                        <fa:ImageAwesome Icon="Bold" Width="15" Height="15" Foreground="White"/>
                                    </ToggleButton>

                                    <!-- Italic -->
                                    <ToggleButton x:Name="btnItalic" 
                                                    Style="{StaticResource ItalicButtonStyle}"
                                                    Width="35" Height="35" 
                                                    Margin="2,0"
                                                    Click="btnItalic_Click"
                                                    ToolTip="Italic">
                                        <fa:ImageAwesome Icon="Italic" Width="15" Height="15" Foreground="White"/>
                                    </ToggleButton>

                                    <!-- Underline -->
                                    <ToggleButton x:Name="btnUnderline" 
                                                    Style="{StaticResource UnderlineButtonStyle}"
                                                    Width="35" Height="35" 
                                                    Margin="2,0,5,0"
                                                    Click="btnUnderline_Click"
                                                    ToolTip="Underline">
                                        <fa:ImageAwesome Icon="Underline" Width="15" Height="15" Foreground="White"/>
                                    </ToggleButton>

                                    <!-- Text Color -->
                                    <Button x:Name="btnTextColor" 
                                            Width="35" Height="35" 
                                            Margin="5,0,2,0"
                                            Click="btnTextColor_Click"
                                            ToolTip="Text Color"
                                            Style="{StaticResource ColorPickerButton}">
                                        <StackPanel>
                                            <TextBlock Text="A" 
                                                       FontWeight="Bold" 
                                                       FontSize="14" 
                                                       Foreground="White" 
                                                       HorizontalAlignment="Center"/>
                                            <Rectangle x:Name="colorIndicator" 
                                                       Height="3" 
                                                       Width="20" 
                                                       Fill="White" 
                                                       Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </Button>

                                    <!-- Popup List With Colors -->
                                    <Popup x:Name="colorPopup" 
                                           PlacementTarget="{Binding ElementName=btnTextColor}"
                                           Placement="Bottom"
                                           StaysOpen="False"
                                           AllowsTransparency="True"
                                           MaxHeight="250">
                                        <Border Background="#FF2A2A2A" BorderBrush="#FF4A4A4A" BorderThickness="1" CornerRadius="4">
                                            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="250">
                                                <ListBox x:Name="colorListBox"
                                                         Background="#FF2A2A2A" 
                                                         BorderThickness="0"
                                                         SelectionChanged="colorListBox_SelectionChanged"
                                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                         FocusManager.IsFocusScope="True"
                                                        Focusable="True">
                                                    <ListBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Orientation="Horizontal" Margin="5,2">
                                                                <Rectangle Width="20" Height="15" 
                                                                           Fill="{Binding Brush}" 
                                                                           Stroke="Black" 
                                                                           StrokeThickness="0.5"
                                                                           Margin="0,0,10,0"/>
                                                                <TextBlock Text="{Binding ColorName}" 
                                                                           VerticalAlignment="Center"
                                                                           Foreground="White"
                                                                           MinWidth="100"/>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </ListBox.ItemTemplate>
                                                </ListBox>
                                            </ScrollViewer>
                                        </Border>
                                    </Popup>
                                </StackPanel>
                            </Border>

                            <!-- RichTextBox =) -->
                            <Border Background="#FF1E1E1E" CornerRadius="0,0,4,4" Padding="15">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Border CornerRadius="3" BorderBrush="#FF4A4A4A" BorderThickness="1" Padding="12,10">
                                        <RichTextBox x:Name="richTextBoxDescription"
                                                     Tag="{Binding}"
                                                     Grid.Row="0"
                                                     BorderThickness="0"             
                                                     Background="Transparent"
                                                     Foreground="White"
                                                     FontFamily="Segoe UI"
                                                     FontSize="14"
                                                     MinHeight="200"
                                                     MaxHeight="200"
                                                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                     TextChanged="richTextBoxDescription_TextChanged"
                                                     SelectionChanged="richTextBoxDescription_SelectionChanged"
                                                     GotFocus="RichTextBoxDescription_GotFocus"
                                                     PreviewTextInput="richTextBoxDescription_PreviewTextInput">
                                            <FlowDocument Tag="{Binding}" LineHeight="20" Foreground="White" Background="Transparent">
                                                <Paragraph>
                                                    <Run x:Name="rtbRunText" Foreground="#CCCCCC"/>
                                                </Paragraph>
                                            </FlowDocument>
                                        </RichTextBox>
                                    </Border>

                                    <!-- Words Count -->
                                    <TextBlock x:Name="txtWordCount"
                                               Grid.Row="1"                                                                   
                                               Padding="10,5" 
                                               Margin="0,10,0,0"
                                               Text="Words: 0" 
                                               FontSize="12" 
                                               Foreground="#CCCCCC"/>
                                </Grid>
                            </Border>

                            <!-- Description Error -->
                            <TextBlock x:Name="txtDescriptionError" 
                                       Foreground="Red"
                                       FontSize="12" 
                                       Margin="0,10,0,0" 
                                       Visibility="Visible"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,20,0">
                    <Button x:Name="btnCancel" 
                            Content="Cancel" 
                            Style="{StaticResource CancelButtonStyle}"
                            Margin="0,0,15,0"
                            Click="btnCancel_Click"
                            ToolTip="Cancel and go back"/>
                    <Button x:Name="btnSave" 
                            Content="Save App" 
                            Style="{StaticResource SaveButtonStyle}"
                            Click="btnSave_Click"
                            ToolTip="Save the new streaming app"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <!-- Page Back Button -->
        <Grid Grid.Row="1">
            <Button x:Name="btnPageBack"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Margin="20"
                    Width="32" Height="32"
                    Style="{StaticResource PageBackwardButton}"
                    ToolTip="Page Backward" 
                    Click="btnPageBack_Click">
                <Image Source="/Assets/Images/leftArrow.png"/>
            </Button>
        </Grid>
    </Grid>
</Page>
